{
    "name": "pastable",
    "repository": {
        "type": "git",
        "url": "https://github.com/astahmer/pastable.git"
    },
    "private": true,
    "author": "Alexandre Stahmer <alexandre.stahmer@gmail.com>",
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --parallel",
        "test": "turbo run test",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "tw:all": "pnpm test:all && watchlist packages -i dist node_modules -- pnpm test:all",
        "coverage": "c8 --include packages pnpm test:all",
        "coverage:ci": "c8 --reporter=lcov --include packages pnpm test:all",
        "coverage:open": "pnpm scripts:openCoverageInBrowser",
        "coverage:view": "pnpm coverage:ci && pnpm coverage:open",
        "plop": "plop"
    },
    "packageManager": "pnpm@6.24.0",
    "devDependencies": {
        "@swc-node/register": "^1.4.2",
        "@types/node": "^17.0.14",
        "@types/prettier": "^2.4.3",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "@types/rimraf": "^3.0.2",
        "c8": "^7.11.0",
        "microbundle": "^0.14.2",
        "plop": "^2.7.6",
        "prettier": "^2.5.1",
        "prettier-plugin-sorted": "^2.0.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "rimraf": "^3.0.2",
        "standard-version": "^9.3.2",
        "tsconfig-paths": "^3.12.0",
        "turbo": "^1.1.2",
        "typescript": "^4.5.5",
        "uvu": "^0.5.3",
        "watchlist": "^0.2.3"
    },
    "importSort": {
        ".js, jsx, .ts, .tsx": {
            "options": {
                "ignoreTsConfig": true,
                "extraAliases": [
                    "@pastable/*"
                ]
            }
        }
    }
}
