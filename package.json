{
    "name": "pastable",
    "workspaces": {
        "packages": [
            "demo",
            "docs-site",
            "packages/*"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/astahmer/pastable.git"
    },
    "author": "Alexandre Stahmer <alexandre.stahmer@gmail.com>",
    "scripts": {
        "build:all": "yarn scripts:buildAll",
        "test:all": "uvu -r @swc-node/register -r tsconfig-paths/register packages 'tests|.+.test.ts'",
        "tw:all": "yarn test:all && watchlist packages -i dist node_modules -- yarn test:all",
        "coverage": "c8 --include packages yarn test:all",
        "coverage:ci": "c8 --reporter=lcov --include packages yarn test:all",
        "coverage:open": "yarn scripts:openCoverageInBrowser",
        "coverage:view": "yarn coverage:ci && yarn coverage:open",
        "plop": "plop"
    },
    "devDependencies": {
        "@swc-node/register": "^1.3.4",
        "@types/prettier": "^2",
        "@types/react": "^17.0.6",
        "@types/react-dom": "^17",
        "@types/react-router": "^5",
        "@types/react-router-dom": "^5.1.7",
        "c8": "^7.7.1",
        "plop": "^2.7.4",
        "prettier": "^2.2.1",
        "prettier-plugin-sorted": "^2.0.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.2.4",
        "uvu": "^0.5.1",
        "watchlist": "^0.2.3"
    },
    "importSort": {
        ".js, jsx, .ts, .tsx": {
            "options": {
                "ignoreTsConfig": true,
                "extraAliases": [
                    "@pastable/*"
                ]
            }
        }
    },
    "dependencies": {
        "react-router": "^5.2.0",
        "react-router-dom": "^5.2.0"
    }
}
