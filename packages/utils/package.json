{
    "name": "@pastable/utils",
    "version": "0.0.1",
    "source": "src/index.ts",
    "main": "dist/index.js",
    "exports": "./dist/index.modern.js",
    "module": "dist/index.module.js",
    "unpkg": "dist/index.umd.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/astahmer/pastable.git"
    },
    "author": "Alexandre Stahmer <alexandre.stahmer@gmail.com>",
    "scripts": {
        "build": "microbundle",
        "dev": "microbundle watch",
        "test": "uvu -r @swc-node/register -r tsconfig-paths/register src",
        "tw": "watchlist src -- yarn test",
        "coverage": "c8 --all yarn test",
        "coverage:open": "yarn scripts:openCoverageInBrowser",
        "coverage:view": "c8 --reporter=lcov --all yarn test && yarn coverage:open",
        "release": "standard-version",
        "prebuild": "rimraf dist",
        "prepare": "yarn build",
        "prepublishOnly": "yarn test",
        "release-publish": "npm release && npm publish && git push --follow-tags origin main"
    },
    "devDependencies": {
        "@swc-node/register": "^1.0.5",
        "@types/node": "^14.14.37",
        "@types/rimraf": "^3",
        "c8": "^7.7.1",
        "microbundle": "^0.13.0",
        "rimraf": "^3.0.2",
        "simple-spy": "^3.0.1",
        "standard-version": "^9.2.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.4",
        "uvu": "^0.5.1",
        "watchlist": "^0.2.3"
    },
    "publishConfig": {
        "access": "public"
    }
}
