{
    "name": "@pastable/utils",
    "description": "A collection of pastable code gathered from past projects.",
    "version": "0.1.12",
    "source": "src/index.ts",
    "main": "dist/index.js",
    "module": "dist/index.module.js",
    "types": "dist/index.d.ts",
    "typings": "dist/index.d.ts",
    "exports": {
        "require": "./dist/index.js",
        "default": "./dist/index.modern.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/astahmer/pastable.git"
    },
    "author": "Alexandre Stahmer <alexandre.stahmer@gmail.com>",
    "scripts": {
        "build": "microbundle build --tsconfig tsconfig.build.json",
        "dev": "microbundle watch",
        "test": "uvu -r @swc-node/register -r tsconfig-paths/register src",
        "tw": "watchlist src -- pnpm test",
        "coverage": "c8 --all pnpm test",
        "coverage:open": "pnpm scripts:openCoverageInBrowser",
        "coverage:view": "c8 --reporter=lcov --all pnpm test && pnpm coverage:open",
        "release": "standard-version -t @pastable/utils\\@ --path .",
        "release:dry": "pnpm release --dry-run",
        "release:minor": "pnpm release --release-as minor",
        "prebuild": "rimraf dist",
        "prepare": "pnpm build",
        "publish:dry": "pnpm prebuild && pnpm test && pnpm build",
        "publish": "pnpm prebuild && pnpm test && pnpm build && pnpm npm publish --access public",
        "prepublishOnly": "pnpm test",
        "release-publish": "pnpm run release && pnpm run publish"
    },
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=14.x"
    },
    "keywords": [
        "pastable",
        "snippets",
        "reusable",
        "utils",
        "tiny",
        "lodash",
        "gists",
        "typescript"
    ],
    "devDependencies": {
        "@pastable/typings": "workspace:../typings",
        "simple-spy": "^3.0.1"
    }
}
