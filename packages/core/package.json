{
    "name": "@pastable/core",
    "version": "0.1.17",
    "source": "src/index.ts",
    "main": "dist/index.js",
    "module": "dist/index.module.js",
    "types": "dist/index.d.ts",
    "typings": "dist/index.d.ts",
    "exports": {
        "require": "./dist/index.js",
        "default": "./dist/index.modern.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/astahmer/pastable.git"
    },
    "author": "Alexandre Stahmer <alexandre.stahmer@gmail.com>",
    "scripts": {
        "build": "microbundle build --tsconfig tsconfig.build.json && pnpm build:dts",
        "build:dts": "dts-bundle-generator -o dist/index.d.ts src/index.ts",
        "dev": "microbundle watch",
        "test": "uvu -r @swc-node/register -r tsconfig-paths/register src",
        "tw": "pnpm test && watchlist src -- pnpm test",
        "coverage": "c8 --all pnpm test",
        "coverage:open": "node -r @swc-node/register -r tsconfig-paths/register src/openFileInBrowser",
        "coverage:view": "c8 --reporter=lcov --all pnpm test",
        "release": "standard-version -t @pastable/core\\@",
        "prebuild": "rimraf dist",
        "prepare": "pnpm build",
        "publish:dry": "pnpm prebuild && pnpm test && pnpm build",
        "prepublishOnly": "pnpm test",
        "release-publish": "pnpm run release && pnpm publish"
    },
    "devDependencies": {
        "@pastable/react": "workspace:../react",
        "@pastable/typings": "workspace:../typings",
        "@pastable/utils": "workspace:../utils",
        "dts-bundle-generator": "^6.5.0",
        "jotai": "^1.5.3",
        "react": "^17.0.2"
    },
    "peerDependencies": {
        "jotai": "*",
        "react": ">=17"
    },
    "peerDependenciesMeta": {
        "jotai": {
            "optional": true
        },
        "react": {
            "optional": true
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=14.x"
    },
    "keywords": [
        "pastable",
        "snippets",
        "reusable",
        "utils",
        "tiny",
        "lodash",
        "gists",
        "typescript",
        "core",
        "all"
    ]
}
