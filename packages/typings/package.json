{
    "name": "@pastable/typings",
    "version": "0.0.4",
    "source": "src/index.ts",
    "main": "dist/index.js",
    "exports": "./dist/index.modern.js",
    "module": "dist/index.module.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/astahmer/pastable.git"
    },
    "author": "Alexandre Stahmer <alexandre.stahmer@gmail.com>",
    "scripts": {
        "build": "microbundle",
        "dev": "microbundle watch",
        "test": "uvu -r @swc-node/register -r tsconfig-paths/register src",
        "tw": "yarn test && watchlist src -- yarn test",
        "coverage": "c8 --all yarn test",
        "coverage:open": "node -r @swc-node/register -r tsconfig-paths/register src/openFileInBrowser",
        "coverage:view": "c8 --reporter=lcov --all yarn test",
        "release": "standard-version -t @pastable/typings\\@ --path .",
        "prebuild": "rimraf dist",
        "prepare": "yarn build",
        "publish:dry": "yarn prebuild && yarn test && yarn build",
        "publish": "yarn prebuild && yarn test && yarn build && yarn npm publish --access public",
        "prepublishOnly": "yarn test",
        "release-publish": "yarn release && yarn publish"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=14.x"
    },
    "keywords": [
        "pastable",
        "snippets",
        "reusable",
        "utils",
        "tiny",
        "lodash",
        "gists",
        "typescript",
        "typings"
    ]
}
