{
    "name": "@pastable/scripts",
    "source": "src/index.ts",
    "main": "dist/index.js",
    "exports": "./dist/index.modern.js",
    "module": "dist/index.module.js",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/astahmer/pastable.git"
    },
    "author": "Alexandre Stahmer <alexandre.stahmer@gmail.com>",
    "scripts": {
        "build": "microbundle",
        "dev": "microbundle watch",
        "test": "uvu -r @swc-node/register -r tsconfig-paths/register src",
        "tw": "yarn test && watchlist src -- yarn test",
        "coverage": "c8 --all yarn test",
        "scripts:openFileInBrowser": "node -r @swc-node/register -r tsconfig-paths/register src/openFileInBrowser --",
        "scripts:openCoverageInBrowser": "node -r @swc-node/register -r tsconfig-paths/register src/openCoverageInBrowser --",
        "coverage:open": "yarn scripts:openCoverageInBrowser",
        "coverage:view": "c8 --reporter=lcov --all yarn test",
        "scripts:buildAll": "node -r @swc-node/register -r tsconfig-paths/register src/buildAll"
    }
}
